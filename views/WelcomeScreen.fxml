<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.WelcomeScreenController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" styleClass="mainBG" stylesheets="@welcome.css">
         <children>
            <Label styleClass="textLight" stylesheets="@welcome.css" text="NavEx">
               <font>
                  <Font name="Times New Roman" size="53.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="40.0" />
               </VBox.margin>
            </Label>
            <Label styleClass="textLight" stylesheets="@welcome.css" text="Welcome!">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onLoginSelected" prefWidth="100.0" styleClass="btnLight" stylesheets="@welcome.css" text="Login">
                     <font>
                        <Font name="Segoe UI Bold" size="16.0" />
                     </font></Button>
                  <Label styleClass="textLight" stylesheets="@welcome.css" text="Don't have an account yet?">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#onRegisterSelected" prefWidth="80.0" styleClass="btnLight" stylesheets="@welcome.css" text="Register">
                     <font>
                        <Font name="Segoe UI Bold" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin></Button>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
