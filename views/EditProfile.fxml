               <VBox.margin>
                  <Insets bottom="2.0" top="10.0" />
               </VBox.margin>
            </Label>
            <DatePicker id="dobField" fx:id="dobField" prefHeight="26.0" prefWidth="305.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
